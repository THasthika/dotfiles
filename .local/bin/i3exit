#!/bin/sh
lock() {
    i3blur
}

stop_mpd() {
    mpc stop
}

case "$1" in
    lock)
        stop_mpd
        lock
        ;;
    logout)
        stop_mpd
        i3-msg exit
        ;;
    suspend)
        stop_mpd
        lock && systemctl suspend
        ;;
    hibernate)
        stop_mpd
        lock && systemctl hibernate
        ;;
    reboot)
        stop_mpd
        systemctl reboot
        ;;
    shutdown)
        stop_mpd
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
